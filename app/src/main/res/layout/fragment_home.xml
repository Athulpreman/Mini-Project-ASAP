<TableLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:stretchColumns="1"
    android:background="@drawable/gradient"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow android:gravity="center">
        <TextView android:text="Enter Book Details"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Code"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookCode"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Title"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookTitle"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Description"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookDescription"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Author"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookAuthor"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Publisher"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookPublisher"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Type"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookType"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Book Price"
            android:layout_marginLeft="20dp"/>
        <EditText android:id="@+id/AddBookPrice"
            android:layout_marginRight="10dp"/>
    </TableRow>
    <TableRow android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button android:text="Submit"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/button2"
            android:id="@+id/AddBookSubmit"
            android:layout_marginBottom="10dp"/>
    </TableRow>
</TableLayout>

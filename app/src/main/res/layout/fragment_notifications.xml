<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TableLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:background="@drawable/gradient"
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TableRow>
            <TextView android:text="Book Title"
                android:layout_marginLeft="20dp"/>
            <EditText android:id="@+id/UpdateBookTitle"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button android:text="Search"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/button2"
                android:id="@+id/UpdateSearchBookButton"
                android:layout_marginBottom="10dp" />
        </TableRow>
        <TableRow android:layout_marginTop="30dp">
            <TextView android:text="Book Code"
                android:layout_marginLeft="20dp"/>
            <EditText android:id="@+id/UpdateBookCode"
                android:layout_marginRight="10dp"/>
        </TableRow>

        <TableRow>
            <TextView android:text="Book Description"
                android:layout_marginLeft="20dp"/>
            <EditText android:id="@+id/UpdateBookDescription"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Book Author"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/UpdateBookAuthor"
                android:layout_height="55dp"
                android:layout_marginRight="10dp" />
        </TableRow>
        <TableRow>
            <TextView android:text="Book Publisher"
                android:layout_marginLeft="20dp"/>
            <EditText android:id="@+id/UpdateBookPublisher"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Book Type"
                android:layout_marginLeft="20dp"/>
            <EditText android:id="@+id/UpdateBookType"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow>
            <TextView android:text="Book Price"
                android:layout_marginLeft="20dp"/>
            <EditText android:id="@+id/UpdateBookPrice"
                android:layout_marginRight="10dp"/>
        </TableRow>
        <TableRow android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button android:text="Update"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/button2"
                android:id="@+id/UpdateBookButton"
                android:layout_marginBottom="10dp" />
        </TableRow>
        <TableRow android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button android:text="Delete"
                android:layout_height="match_parent"
                android:layout_width="200dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button2"
                android:id="@+id/DeleteBookButton"
                android:layout_marginBottom="10dp" />
        </TableRow>

    </TableLayout>



</ScrollView>